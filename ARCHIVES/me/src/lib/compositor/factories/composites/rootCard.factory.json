{
  "$schema": "composite-factory",
  "parameters": {
    "cardLayout": { "type": "string", "default": "grid" },
    "cardClasses": { "type": "string", "default": "card p-2 @xs:p-3 @sm:p-4 @md:p-6 grid-cols-1 grid-rows-[auto_auto_1fr]" }
  },
  "factory": {
    "container": {
      "class": "grid h-full w-full max-w-6xl mx-auto grid-cols-1 p-2 @xs:p-3 @sm:p-4 @md:p-6 overflow-hidden"
    },
    "elements": [
      {
        "tag": "div",
        "classes": "{{cardClasses}}",
        "slot": "children"
      }
    ]
  }
}
