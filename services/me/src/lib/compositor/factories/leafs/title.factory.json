{
  "$schema": "leaf-factory",
  "parameters": {
    "text": { "type": "string", "required": true },
    "tag": { "type": "string", "default": "h1" }
  },
  "factory": {
    "tag": "{{tag}}",
    "classes": "text-2xl @xs:text-3xl @sm:text-4xl @md:text-5xl font-bold text-[#001a42] tracking-tight",
    "elements": ["{{text}}"]
  }
}
