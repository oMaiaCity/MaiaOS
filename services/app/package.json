{
	"name": "app",
	"private": true,
	"version": "0.10.6",
	"type": "module",
	"scripts": {
		"start": "bun build/index.js",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo '' && husky install || true",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"tauri:ios:dev": "tauri ios dev",
		"tauri:ios:build": "tauri ios build",
		"tauri:ios:open": "tauri ios dev --open",
		"version:sync": "node scripts/sync-version.js",
		"version:bump": "node scripts/sync-version.js",
		"version:bump:minor": "node -e \"const v=require('./package.json').version.split('.');v[1]=parseInt(v[1])+1;v[2]=0;require('child_process').execSync('bun run version:sync '+v.join('.'),{stdio:'inherit'})\"",
		"release": "semantic-release",
		"release:dry-run": "semantic-release --dry-run",
		"release:major": "node scripts/release-major.js"
	},
	"dependencies": {
		"@hominio/auth": "workspace:*",
		"@hominio/brand": "workspace:*",
		"@hominio/caps": "workspace:*",
		"@hominio/zero": "workspace:*",
		"@rocicorp/zero": "^0.24.0",
		"nanoid": "^5.0.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^11.1.0",
		"@semantic-release/exec": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.2.6",
		"@semantic-release/npm": "^11.0.2",
		"@semantic-release/release-notes-generator": "^12.1.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@tauri-apps/cli": "^2.9.4",
		"@types/node": "^22",
		"autoprefixer": "^10.4.22",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"husky": "^9.0.11",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"semantic-release": "^23.0.2",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vite-plugin-devtools-json": "^1.0.0"
	}
}
