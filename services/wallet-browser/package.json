{
  "name": "wallet-browser",
  "description": "Hominio Wallet - Own your data, control your privacy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run copy-provider && wxt",
    "dev:firefox": "npm run copy-provider && wxt -b firefox",
    "build": "npm run copy-provider && wxt build",
    "build:firefox": "npm run copy-provider && wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "wxt prepare",
    "copy-provider": "cp ../../libs/hominio-provider/public/inject-provider.js public/inject-provider.js"
  },
  "dependencies": {
    "@hominio/provider": "workspace:*",
    "@hominio/voice": "workspace:*",
    "jazz-tools": "^0.19.13"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^5.0.6",
    "@wxt-dev/module-svelte": "^2.0.4",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "wxt": "^0.20.6"
  }
}
