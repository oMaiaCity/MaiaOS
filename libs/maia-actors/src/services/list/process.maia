{
	"$schema": "°Maia/schema/process",
	"$id": "°Maia/actor/services/list/process",
	"handlers": {
		"CREATE_BUTTON": [
			{
				"ctx": {
					"error": null
				}
			},
			{
				"op": {
					"create": {
						"schema": "°Maia/schema/data/todos",
						"data": {
							"text": "$$value",
							"done": false
						}
					}
				}
			},
			{
				"ctx": {
					"newTodoText": ""
				}
			}
		],
		"UPDATE_INPUT": [
			{
				"ctx": {
					"newTodoText": "$$value"
				}
			}
		],
		"TOGGLE_BUTTON": [
			{
				"op": {
					"update": {
						"id": "$$id",
						"data": {
							"done": {
								"$not": "$$done"
							}
						}
					}
				}
			}
		],
		"DELETE_BUTTON": [
			{
				"op": {
					"delete": {
						"id": "$$id"
					}
				}
			}
		],
		"SUCCESS": [
			{
				"ctx": {}
			}
		],
		"ERROR": [
			{
				"ctx": {
					"error": "$$errors.0.message"
				}
			}
		],
		"RETRY": [
			{
				"ctx": {
					"error": null
				}
			}
		],
		"DISMISS": [
			{
				"ctx": {
					"error": null
				}
			}
		]
	}
}
