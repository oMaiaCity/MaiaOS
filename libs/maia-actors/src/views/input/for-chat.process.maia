{
	"$schema": "°Maia/schema/process",
	"$id": "°Maia/actor/views/input/for-chat/process",
	"@label": "@maia/actor/views/input/for-chat/process",
	"handlers": {
		"UPDATE_INPUT": [
			{
				"ctx": {
					"inputValue": "$$value"
				}
			}
		],
		"FORM_SUBMIT": [
			{
				"tell": {
					"target": "$targetActor",
					"type": "SEND_MESSAGE",
					"payload": {
						"inputText": "$$value"
					}
				}
			},
			{
				"ctx": {
					"inputValue": ""
				}
			}
		],
		"DISMISS": [
			{
				"ctx": {
					"hasError": false,
					"error": null
				}
			}
		],
		"SUCCESS": [
			{
				"ctx": {
					"inputValue": "",
					"hasError": false,
					"error": null
				}
			}
		],
		"ERROR": [
			{
				"ctx": {
					"hasError": true,
					"error": "$$errors.0.message"
				}
			}
		]
	}
}
