{
	"$schema": "°Maia/schema/style",
	"$id": "°Maia/actor/views/conversation/style",
	"@label": "@maia/actor/views/conversation/style",
	"components": {
		"messagesContent": {
			"display": "flex",
			"flexDirection": "column",
			"gap": "{spacing.md}",
			"minHeight": "0",
			"flex": "1",
			"overflowY": "auto",
			"overflowX": "hidden"
		},
		"welcomeSection": {
			"display": "flex",
			"flexDirection": "column",
			"flex": "1"
		},
		"message": {
			"padding": "{spacing.sm} {spacing.md}",
			"borderRadius": "{radii.apple}",
			"maxWidth": "85%",
			"wordWrap": "break-word",
			"fontSize": "0.75rem",
			"lineHeight": "1.4"
		},
		"messageWrapper": {
			"display": "flex",
			"flexDirection": "column",
			"marginBottom": "{spacing.md}"
		},
		"messageName": {
			"fontSize": "0.65rem",
			"opacity": "0.7"
		},
		"loading": {
			"padding": "{spacing.sm}",
			"opacity": "0.7"
		},
		"error": {
			"padding": "{spacing.sm}",
			"color": "{colors.terracotta}"
		}
	}
}
