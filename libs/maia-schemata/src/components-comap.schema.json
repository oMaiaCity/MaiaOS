{
  "$schema": "@schema/meta-schema-cojson",
  "$id": "@schema/components-comap",
  "title": "Component Styles CoMap",
  "description": "Component-specific styles as a separate CoValue",
  "cotype": "comap",
  "properties": {
    "$id": {
      "type": "string",
      "description": "Unique components identifier (co-id)",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    }
  },
  "additionalProperties": {
    "type": "object",
    "description": "CSS properties and values",
    "additionalProperties": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        },
        {
          "type": "object",
          "additionalProperties": true
        }
      ]
    }
  }
}
