{
  "$schema": "@schema/meta-schema-cojson",
  "$id": "@schema/interface",
  "title": "Actor Interface Definition",
  "description": "Message interface specification (inbox, publishes, subscriptions)",
  "cotype": "comap",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema reference",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "$id": {
      "type": "string",
      "description": "Unique interface identifier (co-id)",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "inbox": {
      "type": "object",
      "description": "Incoming message definitions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "payload": {
            "type": "object",
            "description": "Payload schema",
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "string",
                  "description": "Type hint (e.g., 'string', 'number')"
                },
                {
                  "type": "object",
                  "description": "Nested payload schema"
                }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    },
    "publishes": {
      "type": "object",
      "description": "Outgoing message definitions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "payload": {
            "type": "object",
            "description": "Payload schema",
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "string",
                  "description": "Type hint (e.g., 'string', 'number')"
                },
                {
                  "type": "object",
                  "description": "Nested payload schema"
                }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    },
    "subscriptions": {
      "type": "array",
      "description": "List of actor co-ids to subscribe to",
      "items": {
        "$co": "@schema/actor"
      }
    },
    "watermark": {
      "type": "number",
      "description": "Inbox watermark (last processed message index)",
      "minimum": 0,
      "default": 0
    }
  }
}
