{
  "$id": "@schema/data/todos",
  "$schema": "@schema/meta",
  "title": "Todo Item Schema",
  "cotype": "comap",
  "properties": {
    "$id": {
      "type": "string",
      "description": "Unique identifier for the todo item (co-id)",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "text": {
      "type": "string",
      "minLength": 1,
      "description": "The todo item text content"
    },
    "done": {
      "type": "boolean",
      "description": "Whether the todo item is completed"
    }
  },
  "required": ["text", "done"],
  "additionalProperties": false
}
