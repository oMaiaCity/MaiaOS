{
  "$id": "@schema/data/todos",
  "$schema": "@schema/meta",
  "title": "@schema/data/todos",
  "cotype": "comap",
  "indexing": true,
  "properties": {
    "text": {
      "type": "string",
      "minLength": 1,
      "pattern": ".*\\S.*",
      "description": "The todo item text content (must contain at least one non-whitespace character)"
    },
    "done": {
      "type": "boolean",
      "description": "Whether the todo item is completed"
    }
  },
  "required": ["text", "done"],
  "additionalProperties": false
}
