{
  "$schema": "@schema/meta-schema-cojson",
  "$id": "@schema/vibe",
  "title": "Vibe Definition",
  "description": "Vibe manifest/metadata",
  "cotype": "comap",
  "required": ["name", "description", "actor"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema reference",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "$id": {
      "type": "string",
      "description": "Unique vibe identifier (co-id)",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "name": {
      "type": "string",
      "description": "Vibe name"
    },
    "description": {
      "type": "string",
      "description": "Vibe description"
    },
    "actor": {
      "type": "string",
      "description": "Path to actor definition file (e.g., './vibe/vibe.actor.maia')"
    }
  }
}
