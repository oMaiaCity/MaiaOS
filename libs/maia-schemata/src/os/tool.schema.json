{
	"$schema": "°Maia/schema/meta",
	"$id": "°Maia/schema/tool",
	"title": "°Maia/schema/tool",
	"description": "Tool definition (OpenAI/RedPill-compatible format)",
	"cotype": "comap",
	"indexing": true,
	"required": ["type", "function"],
	"properties": {
		"type": {
			"type": "string",
			"const": "function",
			"description": "OpenAI tool type (always 'function')"
		},
		"function": {
			"type": "object",
			"description": "OpenAI function descriptor",
			"required": ["name", "description", "parameters"],
			"properties": {
				"name": {
					"type": "string",
					"description": "Tool identifier (e.g. '@core/updatePaperContent')",
					"pattern": "^@"
				},
				"description": { "type": "string", "description": "Tool description" },
				"parameters": {
					"type": "object",
					"description": "JSON Schema for tool parameters",
					"properties": {
						"type": {
							"type": "string",
							"enum": ["object", "array", "string", "number", "boolean", "null"]
						},
						"properties": {
							"type": "object",
							"additionalProperties": {
								"type": "object",
								"properties": {
									"type": { "type": "string" },
									"description": { "type": "string" },
									"required": { "type": "boolean" },
									"properties": { "type": "object", "additionalProperties": true }
								},
								"additionalProperties": true
							}
						},
						"required": { "type": "array", "items": { "type": "string" } }
					},
					"required": ["type"],
					"additionalProperties": true
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": true
}
