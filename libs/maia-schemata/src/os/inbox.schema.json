{
  "$schema": "@schema/meta",
  "$id": "@schema/inbox",
  "title": "Inbox CoStream",
  "description": "A costream (append-only stream) of messages received by this actor",
  "cotype": "costream",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema reference",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "items": {
      "type": "array",
      "description": "Array of message co-id references",
      "items": {
        "$co": "@schema/message",
        "description": "Each item is a co-id reference to a message"
      }
    }
  },
  "required": ["items"]
}
