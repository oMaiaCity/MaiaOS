{
  "$schema": "@schema/meta",
  "$id": "@schema/subscriptions-colist",
  "title": "Subscriptions Colist",
  "description": "A colist of actor co-ids that this actor subscribes to for receiving messages",
  "cotype": "colist",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema reference",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "$id": {
      "type": "string",
      "description": "Unique subscriptions colist identifier (co-id)",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "items": {
      "type": "array",
      "description": "Array of actor co-id references",
      "items": {
        "$co": "@schema/actor",
        "description": "Each item is a co-id reference to an actor"
      }
    }
  },
  "required": ["items"]
}
