{
  "$schema": "@schema/meta",
  "$id": "@schema/actor",
  "title": "Actor Definition",
  "description": "Pure declarative actor specification",
  "cotype": "comap",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema reference",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "$id": {
      "type": "string",
      "description": "Unique actor identifier (co-id)",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "role": {
      "type": "string",
      "description": "Actor role (e.g., 'kanban-view', 'vibe', 'composite', 'leaf')"
    },
    "context": {
      "$co": "@schema/context",
      "description": "Co-id reference to context definition"
    },
    "view": {
      "$co": "@schema/view",
      "description": "Co-id reference to view definition"
    },
    "state": {
      "$co": "@schema/state",
      "description": "Co-id reference to state machine definition"
    },
    "interface": {
      "$co": "@schema/interface",
      "description": "Co-id reference to interface definition"
    },
    "brand": {
      "$co": "@schema/brandStyle",
      "description": "Co-id reference to brand style definition"
    },
    "style": {
      "$co": "@schema/style",
      "description": "Co-id reference to local style definition"
    },
    "children": {
      "type": "object",
      "description": "Child actor references",
      "additionalProperties": {
        "$co": "@schema/actor"
      }
    },
    "subscriptions": {
      "$co": "@schema/subscriptions-colist",
      "description": "Co-id reference to subscriptions colist (list of actor co-ids to receive messages from)"
    },
    "inbox": {
      "$co": "@schema/inbox",
      "description": "Co-id reference to message inbox costream (append-only message feed)"
    },
    "inboxWatermark": {
      "type": "number",
      "description": "Last processed message timestamp",
      "minimum": 0,
      "default": 0
    }
  }
}
