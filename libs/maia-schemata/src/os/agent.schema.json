{
	"$schema": "째Maia/schema/meta",
	"$id": "째Maia/schema/agent",
	"title": "째Maia/schema/agent",
	"description": "Agent manifest/metadata",
	"cotype": "comap",
	"indexing": true,
	"required": ["name", "description", "actor"],
	"properties": {
		"name": { "type": "string", "description": "Agent name" },
		"description": { "type": "string", "description": "Agent description" },
		"actor": {
			"$co": "째Maia/schema/actor",
			"description": "Co-id reference to actor definition (root actor for this agent)"
		},
		"dependencies": {
			"type": "array",
			"items": { "type": "string" },
			"description": "Explicit actor $ids whose inboxes must be watched (service actors this agent sends to)"
		}
	}
}
