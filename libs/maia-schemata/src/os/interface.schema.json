{
  "$schema": "@schema/meta",
  "$id": "@schema/interface",
  "title": "Actor Interface Definition",
  "description": "Message interface specification (inbox and publishes message type definitions)",
  "cotype": "comap",
  "properties": {
    "inbox": {
      "type": "object",
      "description": "Incoming message definitions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "payload": {
            "type": "object",
            "description": "Payload schema",
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "string",
                  "description": "Type hint (e.g., 'string', 'number')"
                },
                {
                  "type": "object",
                  "description": "Nested payload schema"
                }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    },
    "publishes": {
      "type": "object",
      "description": "Outgoing message definitions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "payload": {
            "type": "object",
            "description": "Payload schema",
            "additionalProperties": {
              "oneOf": [
                {
                  "type": "string",
                  "description": "Type hint (e.g., 'string', 'number')"
                },
                {
                  "type": "object",
                  "description": "Nested payload schema"
                }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    }
  }
}
