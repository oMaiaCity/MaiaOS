{
  "$schema": "@schema/meta",
  "$id": "@schema/message",
  "title": "Message",
  "description": "Actor message for state machine transitions",
  "cotype": "comap",
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "description": "Message type (event name)"
    },
    "payload": {
      "type": "object",
      "description": "Message payload data"
    },
    "source": {
      "type": "string",
      "description": "Source actor co-id",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "target": {
      "type": "string",
      "description": "Target actor co-id",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "timestamp": {
      "type": "number",
      "description": "Message timestamp"
    }
  }
}
