{
  "$schema": "@schema/meta",
  "$id": "@schema/style",
  "title": "Style Definition",
  "description": "Actor-specific style overrides",
  "cotype": "comap",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema reference",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "$id": {
      "type": "string",
      "description": "Unique style identifier (co-id)",
      "pattern": "^co_z[a-zA-Z0-9]+$"
    },
    "tokens": {
      "type": "object",
      "description": "Design tokens (colors, spacing, typography, etc.)",
      "additionalProperties": true
    },
    "components": {
      "type": "object",
      "description": "Component styles",
      "additionalProperties": true
    }
  }
}
