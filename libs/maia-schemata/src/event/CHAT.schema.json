{
	"$schema": "°Maia/schema/meta",
	"$id": "°Maia/schema/event/CHAT",
	"title": "°Maia/schema/event/CHAT",
	"description": "Message type for LLM chat requests routed to @ai/chat actor",
	"cotype": "comap",
	"indexing": true,
	"type": "object",
	"properties": {
		"context": {
			"type": "array",
			"description": "Complete conversation context (full history for stateless LLM)",
			"items": {
				"type": "object",
				"properties": { "role": { "type": "string" }, "content": { "type": "string" } },
				"required": ["role", "content"]
			}
		},
		"model": { "type": "string", "description": "LLM model (e.g. qwen/qwen3-30b-a3b-instruct-2507)" },
		"temperature": { "type": "number", "description": "Temperature 0-2" }
	},
	"required": ["context"],
	"additionalProperties": true
}
