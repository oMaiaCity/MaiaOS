{
  "$schema": "@schema/meta-schema",
  "$id": "https://maiaos.dev/schemas/message.schema.json",
  "title": "Message",
  "description": "Actor message for state machine transitions",
  "type": "object",
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "description": "Message type (event name)"
    },
    "payload": {
      "type": "object",
      "description": "Message payload data"
    },
    "source": {
      "type": "string",
      "description": "Source actor ID"
    },
    "target": {
      "type": "string",
      "description": "Target actor ID"
    },
    "timestamp": {
      "type": "number",
      "description": "Message timestamp"
    }
  }
}
