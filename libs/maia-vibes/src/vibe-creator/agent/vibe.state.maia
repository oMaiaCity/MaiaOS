{
  "$schema": "@maia/schema/state",
  "$id": "@maia/vibe-creator/state/vibe",
  "initial": "idle",
  "states": {
    "idle": {
      "on": {
        "SWITCH_VIEW": {
          "target": "idle",
          "actions": [
            {
              "updateContext": {
                "viewMode": "$$viewMode"
              }
            },
            {
              "updateContext": {
                "currentView": {
                  "$if": {
                    "condition": {
                      "$eq": [
                        "$$viewMode",
                        "logs"
                      ]
                    },
                    "then": "@logs",
                    "else": "@comingSoon"
                  }
                }
              }
            },
            {
              "updateContext": {
                "logsButtonActive": {
                  "$eq": [
                    "$$viewMode",
                    "logs"
                  ]
                }
              }
            },
            {
              "updateContext": {
                "comingSoonButtonActive": {
                  "$eq": [
                    "$$viewMode",
                    "comingSoon"
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}