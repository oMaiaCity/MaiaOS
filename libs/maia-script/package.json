{
  "name": "@maia/script",
  "version": "0.17.0",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./modules/*": "./src/modules/*"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "scripts": {
    "dev": "bun run dev:docs & bun test --watch --bail & bunx browser-sync start --server src --port 4200 --files 'src/**/*.{js,maia,html,css}' --no-notify --no-open --no-ui",
    "dev:docs": "bun run scripts/generate-llm-docs.js --watch",
    "build:docs": "bun run scripts/generate-llm-docs.js",
    "serve": "bunx serve -p 4200 src",
    "test": "bun test",
    "test:watch": "bun test --watch --bail",
    "test:coverage": "bun test --coverage",
    "format": "bunx biome format --write .",
    "lint": "bunx biome lint .",
    "check": "bunx biome check ."
  }
}
