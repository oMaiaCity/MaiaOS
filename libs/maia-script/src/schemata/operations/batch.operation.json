{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://maia.city/operations/batch",
  "title": "Batch Operation Schema",
  "description": "Composite operation that executes multiple operations (sequential or parallel)",
  "type": "object",
  "properties": {
    "op": {
      "const": "batch",
      "description": "Operation type identifier"
    },
    "mode": {
      "enum": ["sequential", "parallel"],
      "default": "sequential",
      "description": "Execution mode for operations"
    },
    "operations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "op": { "type": "string" }
        },
        "required": ["op"]
      },
      "description": "Array of operations to execute (can include nested batch ops)"
    },
    "continueOnError": {
      "type": "boolean",
      "default": false,
      "description": "If true, continue executing remaining operations on error"
    }
  },
  "required": ["op", "operations"],
  "additionalProperties": false
}
