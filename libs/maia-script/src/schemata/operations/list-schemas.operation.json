{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://maia.city/operations/list-schemas",
  "title": "List Schemas Operation",
  "description": "Validates listSchemas operations for retrieving all registered schemas",
  "type": "object",
  "properties": {
    "op": {
      "const": "listSchemas",
      "description": "Operation type identifier"
    },
    "filter": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["co-map", "co-list", "co-stream", "co-binary"],
          "description": "Filter by CRDT type"
        },
        "name": {
          "type": "string",
          "description": "Filter by schema name (partial match)"
        }
      },
      "description": "Optional filters for schemas"
    }
  },
  "required": ["op"],
  "additionalProperties": false
}
