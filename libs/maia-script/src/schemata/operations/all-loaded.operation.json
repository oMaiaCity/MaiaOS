{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://maia.city/operations/all-loaded",
  "title": "All Loaded Operation Schema",
  "description": "Validates inspector operations to list all loaded CoValues",
  "type": "object",
  "properties": {
    "op": {
      "const": "allLoaded",
      "description": "Operation type identifier"
    },
    "filter": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["co-map", "co-list", "co-stream", "co-binary"],
          "description": "Filter by CRDT type"
        },
        "schema": {
          "type": "string",
          "pattern": "^co_z[a-zA-Z0-9]+$",
          "description": "Filter by schema co-id"
        }
      },
      "description": "Optional filters for loaded CoValues"
    }
  },
  "required": ["op"],
  "additionalProperties": false
}
