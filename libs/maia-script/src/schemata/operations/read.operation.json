{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://maia.city/operations/read",
  "title": "Read Operation Schema",
  "description": "Validates read operations with optional deep resolution",
  "type": "object",
  "properties": {
    "op": {
      "const": "read",
      "description": "Operation type identifier"
    },
    "target": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^co_z[a-zA-Z0-9]+$",
          "description": "CoValue ID to read"
        }
      },
      "required": ["id"]
    },
    "resolve": {
      "type": "object",
      "description": "Optional deep resolution configuration",
      "additionalProperties": {
        "oneOf": [
          { "type": "boolean" },
          {
            "type": "object",
            "properties": {
              "schema": {
                "type": "string",
                "pattern": "^co_z[a-zA-Z0-9]+$",
                "description": "Schema co-id for type validation"
              },
              "fields": {
                "type": "object",
                "description": "Nested fields to resolve"
              },
              "each": {
                "type": "object",
                "description": "Resolution config for each list item"
              },
              "depth": {
                "type": "number",
                "minimum": 0,
                "maximum": 10,
                "description": "Maximum resolution depth"
              },
              "onError": {
                "enum": ["throw", "skip", "null"],
                "description": "Error handling strategy"
              }
            }
          }
        ]
      }
    }
  },
  "required": ["op", "target"],
  "additionalProperties": false
}
