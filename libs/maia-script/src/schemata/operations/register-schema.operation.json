{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://maia.city/operations/register-schema",
  "title": "Register Schema Operation",
  "description": "Validates registerSchema operations for registering new data schemas",
  "type": "object",
  "properties": {
    "op": {
      "const": "registerSchema",
      "description": "Operation type identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable name for the schema"
    },
    "definition": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["co-map", "co-list", "co-stream", "co-binary"],
          "description": "CRDT type"
        },
        "properties": {
          "type": "object",
          "description": "Property definitions for co-map types"
        },
        "items": {
          "type": "object",
          "description": "Item schema for co-list types"
        },
        "required": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required property names"
        }
      },
      "required": ["type"]
    }
  },
  "required": ["op", "name", "definition"],
  "additionalProperties": false
}
