{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maiaos.dev/schemas/style.schema.json",
  "title": "Style Definition",
  "description": "Actor-specific style overrides",
  "type": "object",
  "required": ["$type"],
  "properties": {
    "$type": {
      "type": "string",
      "const": "actor.style"
    },
    "$id": {
      "type": "string",
      "description": "Unique style identifier"
    },
    "tokens": {
      "type": "object",
      "description": "Design tokens (colors, spacing, typography, etc.)",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "components": {
      "type": "object",
      "description": "Component-specific styles",
      "additionalProperties": {
        "type": "object",
        "description": "CSS properties and values",
        "additionalProperties": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "object",
              "additionalProperties": true
            }
          ]
        }
      }
    }
  }
}
