{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maiaos.dev/schemas/vibe.schema.json",
  "title": "Vibe Definition",
  "description": "Vibe manifest/metadata",
  "type": "object",
  "required": ["$type", "name", "description", "actor"],
  "properties": {
    "$type": {
      "type": "string",
      "const": "vibe"
    },
    "$id": {
      "type": "string",
      "description": "Unique vibe identifier",
      "pattern": "^vibe_"
    },
    "name": {
      "type": "string",
      "description": "Vibe name"
    },
    "description": {
      "type": "string",
      "description": "Vibe description"
    },
    "actor": {
      "type": "string",
      "description": "Path to actor definition file (e.g., './vibe/vibe.actor.maia')"
    }
  }
}
