{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maiaos.dev/schemas/context.schema.json",
  "title": "Context Definition",
  "description": "Runtime data for an actor (flexible JSON structure)",
  "type": "object",
  "required": ["$type"],
  "properties": {
    "$type": {
      "type": "string",
      "const": "context"
    },
    "$id": {
      "type": "string",
      "description": "Unique context identifier",
      "pattern": "^context_"
    }
  },
  "additionalProperties": {
    "description": "Any additional context fields (collections, UI state, form values, etc.)",
    "oneOf": [
      {
        "type": "array"
      },
      {
        "type": "object"
      },
      {
        "type": ["string", "number", "boolean", "null"]
      }
    ]
  }
}
