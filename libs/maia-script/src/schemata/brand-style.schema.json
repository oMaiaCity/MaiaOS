{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maiaos.dev/schemas/brand-style.schema.json",
  "title": "Brand Style Definition",
  "description": "Shared design system (brand styles)",
  "type": "object",
  "required": ["$type"],
  "properties": {
    "$type": {
      "type": "string",
      "const": "brand.style"
    },
    "$id": {
      "type": "string",
      "description": "Unique brand style identifier",
      "pattern": "^co_brand_"
    },
    "tokens": {
      "type": "object",
      "description": "Design tokens (colors, spacing, typography, radii, shadows, etc.)",
      "properties": {
        "colors": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "description": "Color value (hex, rgb, rgba, etc.)"
          }
        },
        "spacing": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "description": "Spacing value (rem, px, etc.)"
          }
        },
        "typography": {
          "type": "object",
          "additionalProperties": true
        },
        "radii": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "description": "Border radius value"
          }
        },
        "shadows": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "description": "Box shadow value"
          }
        }
      },
      "additionalProperties": true
    },
    "components": {
      "type": "object",
      "description": "Component-specific styles",
      "additionalProperties": {
        "type": "object",
        "description": "CSS properties and values",
        "additionalProperties": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "object",
              "additionalProperties": true
            }
          ]
        }
      }
    },
    "selectors": {
      "type": "object",
      "description": "CSS selector-based styles",
      "additionalProperties": {
        "type": "object",
        "description": "CSS properties and values",
        "additionalProperties": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "object",
              "additionalProperties": true
            }
          ]
        }
      }
    }
  }
}
