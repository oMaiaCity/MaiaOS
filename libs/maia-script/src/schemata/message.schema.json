{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maiaos.dev/schemas/message.schema.json",
  "title": "Actor Message",
  "description": "Message passed between actors via inbox",
  "type": "object",
  "required": ["type", "timestamp"],
  "properties": {
    "type": {
      "type": "string",
      "description": "Message type/event name"
    },
    "payload": {
      "description": "Message payload data",
      "type": "object",
      "additionalProperties": true
    },
    "from": {
      "type": "string",
      "description": "Sender actor ID"
    },
    "timestamp": {
      "type": "number",
      "description": "Unix timestamp",
      "minimum": 0
    },
    "id": {
      "type": "string",
      "description": "Optional message ID for deduplication"
    }
  }
}
