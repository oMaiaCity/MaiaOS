{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Security Validation Rules",
  "description": "JSON-editable security rules for MaiaScript views",
  "version": "1.0.0",
  "rules": {
    "allowedTags": [
      "div",
      "span",
      "p",
      "h1",
      "h2",
      "h3",
      "h4",
      "h5",
      "h6",
      "ul",
      "ol",
      "li",
      "a",
      "button",
      "input",
      "textarea",
      "select",
      "option",
      "label",
      "form",
      "section",
      "article",
      "header",
      "footer",
      "nav",
      "main",
      "aside",
      "img",
      "svg",
      "path",
      "circle",
      "rect",
      "line",
      "polyline",
      "polygon"
    ],
    "allowedAttributes": [
      "class",
      "id",
      "style",
      "type",
      "name",
      "value",
      "placeholder",
      "disabled",
      "readonly",
      "required",
      "checked",
      "draggable",
      "href",
      "target",
      "rel",
      "src",
      "alt",
      "width",
      "height",
      "title",
      "aria-label",
      "aria-describedby",
      "role",
      "tabindex",
      "viewBox",
      "fill",
      "stroke",
      "stroke-width",
      "d",
      "cx",
      "cy",
      "r",
      "x",
      "y",
      "x1",
      "y1",
      "x2",
      "y2",
      "points"
    ],
    "allowedClassPatterns": [
      "^[a-zA-Z][a-zA-Z0-9-_]*$"
    ],
    "forbiddenClasses": [
      "eval",
      "script",
      "constructor",
      "__proto__",
      "prototype"
    ],
    "allowedDataPaths": [
      "item",
      "context",
      "dependencies"
    ],
    "forbiddenDataPaths": [
      "__proto__",
      "constructor",
      "prototype",
      "window",
      "document",
      "global",
      "process",
      "require"
    ]
  }
}
