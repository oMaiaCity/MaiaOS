{
	"name": "MaiaOS",
	"private": true,
	"workspaces": [
		"services/*",
		"libs/*"
	],
	"type": "module",
	"scripts": {
    "dev:maia": "cd libs/maia-script && bun dev",
		"dev": "bun scripts/dev.js",
		"dev:me": "bun --env-file=.env --filter me dev",
		"dev:voice-call": "bun --env-file=.env --filter voice-call dev",
		"build:me": "bun --filter me build",
		"preview:me": "bun --filter me preview",
		"version:sync": "node scripts/sync-version.js",
		"release": "semantic-release",
		"release:dry-run": "semantic-release --dry-run",
		"release:major": "cd services/me && bun run release:major",
		"format": "bunx biome format --write .",
		"lint": "bunx biome lint .",
		"check": "bunx biome check .",
		"check:fix": "bunx biome check --write .",
		"check:ci": "bunx biome ci ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/exec": "^7.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.2",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"semantic-release": "^25.0.2"
	}
}