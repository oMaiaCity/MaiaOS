{
	"name": "MaiaOS",
	"private": true,
	"workspaces": [
		"services/*",
		"libs/*"
	],
	"type": "module",
	"scripts": {
		"dev": "bun scripts/dev.js",
		"dev:city": "bun --filter maia-city dev",
		"dev:voice-call": "bun --env-file=.env --filter voice-call dev",
		"docs:generate": "bun scripts/generate-llm-docs.js",
		"docs:watch": "bun scripts/generate-llm-docs.js --watch",
		"version:sync": "node scripts/sync-version.js",
		"format": "bunx biome format --write .",
		"lint": "bunx biome lint .",
		"check": "bunx biome check .",
		"check:fix": "bunx biome check --write .",
		"check:ci": "bunx biome ci ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/exec": "^7.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.2",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"semantic-release": "^25.0.2"
	},
	"dependencies": {
		"jazz-tools": "^0.19.21"
	}
}