{
	"name": "hominio",
	"private": true,
	"workspaces": [
		"services/*",
		"libs/*"
	],
	"type": "module",
	"scripts": {
		"dev": "bun scripts/dev.js",
		"dev:website": "bun --env-file=.env --filter website dev",
		"dev:wallet": "bun --env-file=.env --filter wallet dev",
		"dev:app": "bun --env-file=.env --filter app dev",
		"dev:sync": "bun --env-file=.env --filter sync dev",
		"dev:api": "bun --env-file=.env --filter api dev",
		"dev:ds": "bun --env-file=.env --filter hominio-design-system dev",
		"dev:all": "bun --env-file=.env --filter website dev & bun --env-file=.env --filter wallet dev & bun --env-file=.env --filter app dev & bun --env-file=.env --filter sync dev & bun --env-file=.env --filter api dev",
		"build": "bun --filter app build",
		"build:website": "bun --filter website build",
		"build:wallet": "bun --filter wallet build",
		"build:sync": "echo 'Sync service uses Docker - no build step needed'",
		"build:api": "echo 'API service uses Bun - no build step needed'",
		"preview": "bun --filter app preview",
		"preview:website": "bun --filter website preview",
		"check": "bun --filter app check",
		"lint": "bun --filter app lint",
		"format": "bun --filter app format",
		"tauri": "bun --filter app tauri",
		"tauri:dev": "bun --filter app tauri:dev",
		"tauri:build": "bun --filter app tauri:build",
		"tauri:ios:dev": "bun --filter app tauri:ios:dev",
		"tauri:ios:build": "bun --filter app tauri:ios:build",
		"version:sync": "node scripts/sync-version.js",
		"release": "semantic-release",
		"release:dry-run": "semantic-release --dry-run",
		"release:major": "cd services/app && bun run release:major"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/exec": "^7.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.2",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"semantic-release": "^25.0.2"
	}
}